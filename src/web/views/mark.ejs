<!DOCTYPE html>
<html>

<head lang="zh-CN">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>微博后台事件处理系统</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/logic/public.js"></script>
    <script type="text/javascript" src="/js/table/component.js"></script>
    <script type="text/javascript" src="/js/logic/mark.js"></script>
    <style type="text/css">
    html,
    body {
        height: 100%;
    }
    
    table {
        padding-bottom: 100px;
    }
    
    .segmentword {
        width: 25px;
        height: 25px;
        border: 1px solid grey;
        border-radius: 5px;
        background: grey;
        color: black;
        line-height: 25px;
        font-size: 12px;
        display: inline-block;
        text-align: center;
        margin-left: 2px;
        margin-bottom: 2px;
    }
    
    .segmentword.schecked {
        color: white;
        background: red;
        display: inline-block;
    }
    
    .segmentword span {
        margin: 0 auto;
    }
    
    a:link {
        text-decoration: none;
    }
    
    a:visited {
        text-decoration: none;
    }
    
    a:hover {
        text-decoration: none;
    }
    
    a:active {
        text-decoration: none;
    }

    .col-sm-6 span{margin-right:15px;}
    </style>
</head>

<body>
    <div class="row">
        <div class="col-sm-10">
            <ul class="nav nav-tabs mark">
                <li role="presentation" class="active" id="notmark"><a>待标注</a></li>
                <li role="presentation" id="marked"><a>已标注</a></li>
            </ul>
        </div>
        <div class="col-sm-2" style="padding:15px 0;">
            <a class="btn btn-primary" href="/table.csv" style="display:inline;margin-top:25px;">导出</a>
        </div>   
    </div>

    <div id="notmark-content" class="content">
        <table id="plan-list" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>用户名</th>
                    <th>微博内容</th>
                    <th>微博ID</th>
                    <th>发布时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot></tfoot>
        </table>
        <br>
        <br>
        <br>
        <br>
        <script type="text/javascript">
        loadPlanList({});
        </script>
    </div>
    <div id="marked-content" class="content hidden">
        <table id="mark-list" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>trigger</th>
                    <th>who</th>
                    <th>whom</th>
                    <th>how</th>
                    <th>when</th>
                    <th>where</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot></tfoot>
        </table>
        <br>
        <br>
        <br>
        <br>
        <script type="text/javascript">
        loadMarkList({});
        </script>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="markmodel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">标注微博</h4>
                </div>
                <div class="modal-body">
                    <div style="height:30px;margin-bottom:20px;font-size:14px;">
                        <ul class="nav nav-tabs modalnav">
                            <li role="presentation" class="active" id="trigger"><a>trigger</a></li>
                            <li role="presentation" id="who"><a>who</a></li>
                            <li role="presentation" id="whom"><a>whom</a></li>
                            <li role="presentation" id="when"><a>when</a></li>
                            <li role="presentation" id="where"><a>where</a></li>
                            <li role="presentation" id="how"><a>how</a></li>
                        </ul>
                    </div>
                    <div id="modal-content">
                        <div id="trigger-content"></div>
                        <div id="who-content" class="hidden"></div>
                        <div id="whom-content" class="hidden"></div>
                        <div id="when-content" class="hidden"></div>
                        <div id="where-content" class="hidden"></div>
                        <div id="how-content" class="hidden"></div>
                    </div>
                    <br>
                    <div id='selectcontent' class="row">
                        <div class="col-sm-6 trigger"><span class="label label-default">trigger</span><span></span></div>
                        <div class="col-sm-6 who"><span class="label label-primary">who</span><span></span></div>
                        <br><br>
                        <div class="col-sm-6 whom"><span class="label label-success">whom</span><span></span></div>
                        <div class="col-sm-6 when"><span class="label label-info">when</span><span></span></div>
                        <br><br>
                        <div class="col-sm-6 where"><span class="label label-warning">where</span><span></span></div>
                        <div class="col-sm-6 how"><span class="label label-danger">how</span><span></span></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="submitmark">提交</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
